            <Insets bottom="10.0" />
        </VBox.margin>
    </ComboBox>
    <Button contentDisplay="CENTER" onAction="#adicionarFuncionario" prefHeight="26.0" prefWidth="95.0" style="-fx-background-color: green; -fx-border-color: green; -fx-border-radius: 20;" text="Adicionar" textFill="WHITE">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Button>
    <TableView fx:id="tabelaFuncionarios" prefHeight="381.0" prefWidth="579.0" style="-fx-border-color: black; -fx-border-radius: 5;">
        <columns>
            <TableColumn fx:id="sexoCol" prefWidth="87.0" text="Sexo" />
            <TableColumn fx:id="nomeCol" prefWidth="212.0" text="Nome" />
            <TableColumn fx:id="idadeCol" prefWidth="84.0" text="Idade" />
            <TableColumn fx:id="cidadeCol" prefWidth="184.0" text="Cidade" />
            <TableColumn fx:id="cargoCol" prefWidth="188.0" text="Cargo" />
        </columns>
    </TableView>
   <opaqueInsets>
      <Insets />

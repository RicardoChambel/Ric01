        <padding>
            <Insets left="5.0" />
        </padding>
      <font>
         <Font size="30.0" />
      </font>
    </Label>
    <TextField fx:id="idadeField" style="-fx-border-color: black; -fx-border-radius: 5; -fx-border-width: 1; -fx-background-color: white;">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label style="-fx-border-width: 0 0 0 2; -fx-border-color: black;" text="Cidade">

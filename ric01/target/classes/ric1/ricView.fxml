      <font>
         <Font size="30.0" />
      </font>
    </Label>
    <TextField fx:id="cidadeField" style="-fx-border-color: black; -fx-border-radius: 5; -fx-border-width: 1; -fx-background-color: white;">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>

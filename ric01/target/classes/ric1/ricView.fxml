        </padding>
      <font>
         <Font size="30.0" />
      </font>
    </Label>
    <ComboBox fx:id="cargoBox" prefHeight="26.0" prefWidth="151.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 20;">

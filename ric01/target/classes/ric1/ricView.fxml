<VBox id="vbox" prefHeight="800.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ric1.ricController">
    <Label style="-fx-border-width: 0 0 0 2; -fx-border-color: black;" text="Sexo">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
        <padding>
            <Insets left="5.0" />
        </padding>
      <font>
         <Font size="30.0" />
      </font>
    </Label>

    <!-- Caixa das opções de sexo com botoes radios -->
    <HBox alignment="CENTER_LEFT" layoutX="21.0" layoutY="207.0" prefHeight="50.0" prefWidth="200.0">
        <!-- Opção M -->
        <RadioButton fx:id="radioButtonM" style="-fx-border-color: black; -fx-border-radius: 20;" text="M">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
         <toggleGroup>
            <ToggleGroup fx:id="group" />
         </toggleGroup>
        </RadioButton>

        <!-- Opção F -->
        <RadioButton fx:id="radioButtonF" style="-fx-border-color: black; -fx-border-radius: 20;" text="F" toggleGroup="$group">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </RadioButton>

        <!-- Opção Outros (-) -->
        <RadioButton fx:id="radioButtonOutros" style="-fx-border-color: black; -fx-border-radius: 20;" text="Outro" toggleGroup="$group">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </RadioButton>
    </HBox>

                <Label style="-fx-border-width: 0 0 0 2; -fx-border-color: black;" text="Nome">
